<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="214dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_view_margin"
            android:layoutDirection="rtl"
            android:text="0"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_view_font_size" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/table_layout_margin"
            android:gravity="top">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">


                <Button
                    android:id="@+id/button_clear_all"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="C"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@color/design_default_color_error" />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="CE"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_orange_light" />

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="X"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_blue_light" />

                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="+"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_orange_dark" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">


                <Button
                    android:id="@+id/button_seven"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="7"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_eight"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="8"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_nine"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="9"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_minus"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="-"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_orange_dark" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:id="@+id/button_four"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="4"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_five"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="5"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_six"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="6"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_mult"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="*"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_orange_dark" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:id="@+id/button_one"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="1"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_two"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="2"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_three"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="3"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_div"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="/"
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_orange_dark" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_span="2"
                    android:text="0"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="."
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/button_result"
                    android:layout_width="@dimen/button_margin"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:text="="
                    android:textSize="@dimen/button_text_size"
                    app:backgroundTint="@android:color/holo_green_dark" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>